---
import PageHeader from "@components/PageHeader.astro";
import Shape from "@components/Shape.astro";
import CounterComponent from "@components/doctors/CounterComponent.astro";
import Gallery from "@components/doctors/Gallery.astro";
import OurMembers from "@components/doctors/OurMembers.astro";
import Works from "@components/doctors/Works.astro";
import Base from "@layouts/Base.astro";
import { getEntryBySlug } from "astro:content";

const doctors = await getEntryBySlug("doctors", "index");
const { counter, gallery, features, members } = doctors.data;
const page_data = {
  ...doctors.data,
  content: doctors.body,
};
---

<Base
  title={doctors.data.title}
  meta_title={doctors.data.meta_title}
  description={doctors.data.description}
  image={doctors.data.image}
>
  <Shape />
  <section class="page-hero py-16">
    <div class="container">
      <div class="page-hero-content mx-auto max-w-[768px] text-center">
        <PageHeader page_data={page_data} />
      </div>
      <CounterComponent counter={counter} />
      <!-- benifit -->
      <!-- gellary -->
      <Gallery gallery={gallery} />
      <!-- our works -->
      <Works features={features} />
      <!-- our members -->
      <OurMembers members={members} />
    </div>
  </section>
</Base>
